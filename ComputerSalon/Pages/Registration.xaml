<Page x:Class="ComputerSalon.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerSalon.Pages"
      xmlns:uc="clr-namespace:ComputerSalon.Resources"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="900"
     
      Title="АвторизацияПользователя" Background="White">

    <Grid Style="{DynamicResource StyleForRegistrationPages}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.5*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>




        <TextBlock Text="Регистрация" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{DynamicResource TextBlockStyleTitle}"/>

        <TextBox Grid.Row="1"  Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Tag="Введите фамилию" x:Name="SurnameTBRegistration"/>
        <TextBox Grid.Row="3"  Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Tag="Введите имя" x:Name="NameTBRegistration"/>
        <TextBox Grid.Row="5"  Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Tag="Введите отчество" x:Name="PatronymicTBRegistration"/>
        <TextBox Grid.Row="7"  Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Tag="Введите электронную почту" x:Name="LoginTBRegistration"/>
        <uc:PasswordBoxWithPasswordViewer Grid.Row="9"  Grid.Column="1"  Placeholder="Введите пароль" x:Name="PasswordTBRegistration"/>
        <TextBox Grid.Row="11" Grid.Column="1" Style="{DynamicResource TextBoxStyle}" Tag="Введите номер телефона" x:Name="NumberPhoneTBRegistration"/>
                                            
        <Button Grid.Row="13"  Grid.Column="1" Style="{DynamicResource ButtonStyle}" Content="Зарегистрироваться" Click="RegistrationForBuyerClick"/>



    </Grid>
</Page>
