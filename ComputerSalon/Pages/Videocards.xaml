<Page x:Class="ComputerSalon.Pages.Videocards"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerSalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Videocards">

    <Grid Style="{DynamicResource StyleForRegistrationPages}">
        <Grid.RowDefinitions>
            <RowDefinition Height="370"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="DataGridVideocards" AutoGenerateColumns="False" Grid.Row="0" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="VideoMemoryCapacity" Binding="{Binding VideoMemoryCapacity}" Width="*"/>
                <DataGridTextColumn Header="MemoryType" Binding="{Binding MemoryType}" Width="*"/>
                <DataGridTextColumn Header="GraphicsProcessor" Binding="{Binding GraphicsProcessor}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
